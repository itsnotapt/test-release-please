{
  "packages": {
    ".": {
      "changelog-path": "CHANGELOG.md",
      "release-type": "simple"
    },
    "frontend": {
      "release-type": "simple",
      "package-name": "frontend",
      "extra-files": [
          {
              "type": "yaml",
              "path": "helm/Chart.yaml",
              "jsonpath": "$.version"
          }
      ]
    },
    "backend": {
      "release-type": "simple",
      "package-name": "backend",
      "extra-files": [
          {
              "type": "yaml",
              "path": "helm/Chart.yaml",
              "jsonpath": "$.version"
          }
      ]
    }
  },
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json"
}
